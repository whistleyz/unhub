
{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@uncdn/*": ["packages/*"]
    },
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": false,
    "newLine": "LF"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
